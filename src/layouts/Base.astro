---
import type { SiteMeta } from "@/data/types";
import BaseHead from "@/components/BaseHead";
import ThemeProvider from "@/components/ThemeProvider";
import Header from "@/components/layout/Header";
import Footer from "@/components/layout/Footer";
import SkipLink from "@/components/SkipLink";
import { siteConfig } from "@/site-config";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";

interface Props {
	meta: SiteMeta;
}

const {
	meta: { title, description = siteConfig.description, ogImage, articleDate },
} = Astro.props;
---

<html lang={siteConfig.lang}>
	<head>
		<BaseHead title={title} description={description} ogImage={ogImage} articleDate={articleDate} />
    <!-- <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Instrument+Sans:wght@200;400;500;700;800&display=swap">
    </GoogleFontsOptimizer> -->
	</head>
	<script async src="https://www.googletagmanager.com/gtag/js?id=G-KQ49QFTDS4"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-KQ49QFTDS4');
	</script>
	<body>
		<ThemeProvider />
		<SkipLink />
		<Header />
		<main id="main" class="flex-1">
			<slot />
		</main>
		<Footer />
	</body>
</html>